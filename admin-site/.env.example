# admin-site example environment variables
# Copy to admin-site/.env.local and fill secrets locally.

# Internal API base used by admin-site (example)
INTERNAL_API_BASE=https://api.shirasame.com
INTERNAL_API_KEY=

# Images domain (same as public-site)
IMAGES_DOMAIN=https://images.shirasame.com
 
# Public site URL used by some server-side code (include protocol)
# Set this to your admin custom domain when deploying
NEXT_PUBLIC_SITE_URL=https://admin.shirasame.com
# Hostname only (used for host checks)
NEXT_PUBLIC_PUBLIC_HOST=admin.shirasame.com
